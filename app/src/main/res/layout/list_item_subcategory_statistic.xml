<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="32dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvSubCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        tools:text="HauptstÃ¤dte" />

    <!-- ... (other TextViews for stats) ... -->
    <TextView
        android:id="@+id/tvSubCategoryTotalQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Total Questions: 10" />
    <TextView
        android:id="@+id/tvSubCategoryTotalAnswered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Questions Answered: 5 / 10" />
    <TextView
        android:id="@+id/tvSubCategoryAvgCorrectness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Avg. Correctness (all attempts): 60%" />
    <TextView
        android:id="@+id/tvSubCategoryAvgStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Avg. Recent Streak: 60%" />


    <!-- Action Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnLearnAllSubCategory"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:paddingHorizontal="4dp"
            android:text="All" />

        <Button
            android:id="@+id/btnLearnUnansweredSubCategory"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:paddingHorizontal="4dp"
            android:text="Unanswered" />

        <!-- Changed from btnLearnIncorrectSubCategory -->
        <Button
            android:id="@+id/btnLearnWeakSubCategory"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:paddingHorizontal="4dp"
            android:text="Weak" /> <!-- Text changed to "Weak" -->

        <Button
            android:id="@+id/btnResetStatsSubCategory"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="11sp"
            android:paddingHorizontal="4dp"
            android:text="Reset" />
    </LinearLayout>
</LinearLayout>